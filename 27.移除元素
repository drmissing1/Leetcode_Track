class Solution(object):
    def removeElement(self, nums, val):
        """
        :type nums: List[int]
        :type val: int
        :rtype: int
        """
        # count = len(nums)
        # i = 0
        # while i < len(nums):
        #     if nums[i] == val:
        #         j = i
        #         while j < len(nums):
        #             if j == len(nums) - 1:
        #                 nums[j] = "_"
        #             else: nums[j] = nums[j+1]
        #             j += 1
        #         count -= 1
        #         i -= 1
        #     i += 1     
        # return count
        left , right = 0 , 0
        while right < len(nums):
            if nums[right] == val:
                right += 1
                continue
            nums[left] = nums[right]
            left += 1
            right += 1
        return left
